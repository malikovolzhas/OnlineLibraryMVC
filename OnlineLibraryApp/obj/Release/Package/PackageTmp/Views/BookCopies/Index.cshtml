@model IEnumerable<OnlineLibraryApp.Models.BookCopy>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.inventory_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.is_available)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.take_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.return_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Book.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.inventory_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.is_available)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.take_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.return_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
